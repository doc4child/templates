					"default": "admin",
					"label": "ldap admin username"
				},
				{
					"name": "ADMIN_PASSWORD",
					"default": "changeme",
					"label": "ldap admin password"
				},
				{
					"name": "CONFIG_PASSWORD",
					"default": "changeme",
					"label": "ldap config password"
				},
				{
					"name": "npm_XX",
					"label": "npm directory where let's encrypt live certificate links are present, replace XX with number in npm-XX"
				},	
				{
					"name": "OPENLDAP_PORT",
					"default": "636",
					"label": "openLDAP Port"
				},
				{
					"name": "LDAPADMIN_PORT",
					"default": "18443",
					"label": "LDAP Admin Port"
